{
    "title": "Mouse 5,4 -> Photoshop layer select",
    "maintainers": [
    "allamathatcode"
  ],
    "rules": [
        {
            "description": "Mouse button 5 to select layer below current one",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button5"
                    },
                    "to": [
                        {
                            "key_code": "]",
                            "modifiers": [
                "left_alt",
              ]
            }
          ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                "^com\\.adobe\\.Photoshop$"
              ]
            },
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 5426,
                                    "product_id": 131,
                                    "description": "Razer Basilisk Hyerspeed"
                    }
              ]
            }
          ]
        }
      ]
    },
        {
            "description": "Mouse button 4 to select layer below current one",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button4"
                    },
                    "to": [
                        {
                            "key_code": "period",
                            "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                "^com\\.adobe\\.Photoshop$"
              ]
            },
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 5426,
                                    "product_id": 131,
                                    "description": "Razer Basilisk Hyerspeed"
                    }
              ]
            }
          ]
        }
      ]
    }
  ]
}
